{
   "compilerOptions": {
     "target": "es5",                          
     "module": "commonjs",                     
     "lib": ["es6", "dom"],                             
     "allowJs": true,                       
     "outDir": "./dist",                        
     "rootDir": "./src",                       
     "removeComments": true,                
     "typeRoots": [
       "./node_modules/@types",
       "./src/@types"
     ],                          
     "esModuleInterop": true,                  
     "resolveJsonModule": true,
     "experimentalDecorators": true,        
     "emitDecoratorMetadata": true,         
     "skipLibCheck": true,                     
     "forceConsistentCasingInFileNames": true,
     "baseUrl": ".",
     "paths": {
       "@controllers/*": ["./src/controllers/*"],
       "@models/*": ["./src/models/*"],
       "@views/*": ["./src/views/*"],
       "@config/*": ["./src/config/*"],
       "@routes/*": ["./src/routes/*"]
     },
     "sourceMap": true,
   },
   "include": [
     "src/**/*"
   ]
}